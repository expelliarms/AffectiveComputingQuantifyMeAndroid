<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/screenContainer"
    tools:context=".activities.questions.fragment.QuestionDateFragment"
    android:orientation="vertical"
    android:gravity="center|top"
    android:padding="0dp"
    android:background="#f4f4f4">


    <ScrollView
        android:background="@color/fadeblue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:paddingTop="20dp">

            <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">


        <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="5dp"
                card_view:contentPadding="0dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardCornerRadius="10dp"
                android:layout_marginBottom="7dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.makeramen.roundedimageview.RoundedImageView
                        card_view:riv_corner_radius="10dp"
                        android:clickable="true"
                        android:id="@+id/leisurehappiness"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/experiment_choose_leisurehappy"
                        android:adjustViewBounds="true" />
                </FrameLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="5dp"
                card_view:contentPadding="0dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardCornerRadius="10dp"
                android:layout_marginBottom="7dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.makeramen.roundedimageview.RoundedImageView
                        card_view:riv_corner_radius="10dp"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/experiment_choose_stepssleepefficiency"
                        android:adjustViewBounds="true"
                        android:id="@+id/stepssleepefficiency" />
                </FrameLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="5dp"
                card_view:contentPadding="0dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardCornerRadius="10dp"
                android:layout_marginBottom="7dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.makeramen.roundedimageview.RoundedImageView
                        card_view:riv_corner_radius="10dp"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/experiment_choose_sleepdurationproductivity"
                        android:adjustViewBounds="true"
                        android:id="@+id/sleepdurationproductivity"/>
                </FrameLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="5dp"
                card_view:contentPadding="0dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardCornerRadius="10dp"
                android:layout_marginBottom="7dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.makeramen.roundedimageview.RoundedImageView
                        card_view:riv_corner_radius="10dp"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/experiment_choose_sleepvariabilitystress"
                        android:adjustViewBounds="true"
                        android:id="@+id/sleepvariabilitystress"/>
                </FrameLayout>
            </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="7dp"
        card_view:contentPadding="0dp"
        card_view:cardUseCompatPadding="true"
        android:layout_marginTop="-15dp"
        android:layout_marginLeft="-15dp"
        android:layout_marginRight="-15dp"
        >

        <edu.mit.media.mysnapshot.view.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view"
            android:textSize="20sp"
            android:text="Select Your Experiment"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="20dp"
            android:background="@color/darkblue"
            android:textColor="@color/white"
            />

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_settings_experiment_effectiveness"
            android:id="@+id/imageView5" />

    </android.support.v7.widget.CardView>


</RelativeLayout>

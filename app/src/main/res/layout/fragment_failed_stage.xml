<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/screencontainer"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView10"
        android:src="@color/fadeblue"
        android:scaleType="fitXY"
        android:alpha=".6" />

    <FrameLayout
        android:id="@+id/particlecontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />


    <LinearLayout
        style="@style/screenContainer"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true">

        <edu.mit.media.mysnapshot.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="Stage Restarting!"
            app:customtypeface="Montserrat"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal" />


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/icon_settings_sad"
            android:id="@+id/imageView6" />

        <edu.mit.media.mysnapshot.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Ack! Looks like we couldn't gather enough data for that stage, and we have to redo it."
            android:gravity="center"
            android:lineSpacingMultiplier="1.15"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
             />

        <edu.mit.media.mysnapshot.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Please be sure to use your Jawbone and checkin here app every day, and to hit the target goals."
            android:gravity="center"
            android:lineSpacingMultiplier="1.15"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            />

    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Okay. Got it."
        android:id="@+id/done_button"
        android:clickable="true"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
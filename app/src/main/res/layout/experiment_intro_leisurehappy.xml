<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/screencontainer"
    android:layout_height="match_parent"
    android:background="@color/red">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/background"
        android:src="@drawable/experiment_bg_leisurehappy"
        android:scaleType="fitXY" />

    <LinearLayout
        style="@style/screenContainer"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <edu.mit.media.mysnapshot.view.FontTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textSize="26sp"
            android:text="How does my leisure time affect my happiness?"
            app:customtypeface="Montserrat"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp" />


        <edu.mit.media.mysnapshot.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:textSize="18sp"
            android:text="@string/leisure_intro_text"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></FrameLayout>

    </LinearLayout>

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/done_button"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="25dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttonbackgroundwhite"
        android:textColor="@color/text" />

</RelativeLayout>
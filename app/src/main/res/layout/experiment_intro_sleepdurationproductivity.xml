<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/screencontainer"
    android:layout_height="match_parent"
    android:background="@color/purple">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/background"
        android:src="@drawable/experiment_bg_sleepdurationproductivity"
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp" />

    <LinearLayout
        style="@style/screenContainer"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <edu.mit.media.mysnapshot.view.FontTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textSize="28sp"
            android:text="How does my nightly sleep affect my productivity?"
            app:customtypeface="Montserrat"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
             />


        <edu.mit.media.mysnapshot.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:textSize="18sp"
            android:text="@string/sleepduration_intro_text"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></FrameLayout>

    </LinearLayout>

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/done_button"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
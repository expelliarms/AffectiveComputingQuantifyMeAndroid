<resources>

    <!-- Base application theme. -->
    <style name="BaseStyle" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/background</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="android:textViewStyle">@style/TextView</item>

        <item name="android:dropDownSpinnerStyle">@style/Base.Widget.AppCompat.Spinner.Underlined</item>
        <item name="android:spinnerStyle">@style/Base.Widget.AppCompat.Spinner.Underlined</item>
        <item name="spinnerStyle">@style/Base.Widget.AppCompat.Spinner.Underlined</item>

        <item name="android:soundEffectsEnabled">false</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
    </style>

    <style name="FullscreenDialog" parent="BaseStyle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/actionbar</item>
        <item name="background">@color/actionbar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/buttonbackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="DisabledButton" parent="Button">
        <item name="android:background">@drawable/buttonbackgrounddisabled</item>
        <item name="android:textColor">@color/buttondisablecolor</item>
    </style>

    <style name="LinkButton" parent="Button">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/buttontextcolor</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="FullWidthButton" parent="Button">
        <item name="android:background">@drawable/buttonbackground_fullwidth</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">30dp</item>
    </style>

    <style name="TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="screenContainer">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_bottom_margin</item>
    </style>

    <style name="questionContainer">
        <item name="android:paddingBottom">60dp</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="QuestionText">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="customtypeface">Montserrat</item>
    </style>

    <style name="QuestionIconGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:columnCount">2</item>
    </style>

    <style name="QuestionViceIconGroup" parent="QuestionIconGroup">
        <item name="android:columnCount">3</item>
    </style>

    <style name="QuestionChoice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="QuestionNextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="QuestionIcon">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

</resources>
